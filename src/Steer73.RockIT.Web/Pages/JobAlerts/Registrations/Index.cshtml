@page "/JobAlerts/Registrations"
@using Microsoft.AspNetCore.Mvc.Localization
@using Steer73.RockIT.Localization
@using Steer73.RockIT.Permissions
@using Steer73.RockIT.Web.Menus
@model Steer73.RockIT.Web.Pages.JobAlerts.Registrations.IndexModel
@inject IHtmlLocalizer<RockITResource> L
@inject Volo.Abp.AspNetCore.Mvc.UI.Layout.IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["JobAlertRegistrations"].Value;
    PageLayout.Content.MenuItemName = RockITMenus.JobAlertRegistrations;
}

@section scripts
{
    <abp-script src="/Pages/JobAlerts/Registrations/Index.js" />
}

<abp-card>
    <abp-card-body>
        <abp-row class="mb-3">
            <abp-column size-md="_12">
                <form id="SearchForm" autocomplete="off">
                    <div class="input-group">
                        <input class="form-control page-search-filter-text" id="FilterText" placeholder="@L["Search"]" />
                        <abp-button button-type="Primary" type="submit" icon="search" />
                    </div>
                </form>
            </abp-column>
            <abp-column size-md="_12" class="mt-3">
                <a href="javascript:;" id="AdvancedFilterSectionToggler" class="text-decoration-none">@L["SeeAdvancedFilters"]</a>
            </abp-column>
        </abp-row>

        <abp-row id="AdvancedFilterSection" style="display: none;">
            <abp-column size="_4">
                <abp-select id="PracticeGroupFilter" label="@L["PracticeGroups"]">
                    <option value="">@L["All"]</option>
                    @foreach (var option in Model.PracticeGroups)
                    {
                        <option value="@option.Value">@option.Text</option>
                    }
                </abp-select>
            </abp-column>
            <abp-column size="_4">
                <abp-select id="StatusFilter" label="@L["Status"]">
                    <option value="">@L["All"]</option>
                    <option value="true">@L["Active"]</option>
                    <option value="false">@L["Unsubscribed"]</option>
                </abp-select>
            </abp-column>
        </abp-row>

        <abp-table striped-rows="true" id="JobAlertRegistrationsTable">
            <thead>
                <tr>
                    <th>@L["EmailAddress"]</th>
                    <th>@L["FirstName"]</th>
                    <th>@L["LastName"]</th>
                    <th>@L["PracticeGroups"]</th>
                    <th>@L["RoleTypes"]</th>
                    <th>@L["Status"]</th>
                    <th>@L["CreationTime"]</th>
                    <th>@L["LastUpdated"]</th>
                </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>
