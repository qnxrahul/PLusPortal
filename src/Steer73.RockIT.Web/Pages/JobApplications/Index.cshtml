<abp-card>
    <abp-card-body>
		<abp-row class="mb-3">
            <abp-column size-md="_12">
                <form id="SearchForm" autocomplete="off">
                    <div class="input-group">
                        <input class="form-control page-search-filter-text" id="FilterText" placeholder="@L["Search"]"/>
                        <abp-button button-type="Primary" type="submit" icon="search"/>
                    </div>
                </form>
            </abp-column>
            <abp-column size-md="_12" class="mt-3">
                <a href="javascript:;" id="AdvancedFilterSectionToggler" class="text-decoration-none">@L["SeeAdvancedFilters"]</a>
            </abp-column>
        </abp-row>

        <abp-row id="AdvancedFilterSection" style="display: none;">
            <abp-column size="_3">
                <abp-input asp-for="FirstNameFilter" label="@L["FirstName"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="LastNameFilter" label="@L["LastName"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="EmailAddressFilter" label="@L["EmailAddress"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="TitleFilter" label="@L["Title"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="PhoneNumberFilter" label="@L["PhoneNumber"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="LandlineFilter" label="@L["Landline"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="CurrentRoleFilter" label="@L["CurrentRole"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="CurrentCompanyFilter" label="@L["CurrentCompany"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="CurrentPositionTypeFilter" label="@L["CurrentPositionType"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="Status" label="@L["Status"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="VacancyIdFilter" label="@L["Vacancy"].Value" />
            </abp-column>
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        </abp-row>


        <abp-table striped-rows="true" id="JobApplicationsTable">
            <thead>
				<tr>
				    
				    <th id="DetailRowTHeader"></th>
					<th>@L["Actions"]</th>
					<th>@L["FirstName"]</th>
					<th>@L["LastName"]</th>
					<th>@L["EmailAddress"]</th>
					<th>@L["Title"]</th>
					<th>@L["PhoneNumber"]</th>
					<th>@L["Landline"]</th>
					<th>@L["CurrentRole"]</th>
					<th>@L["CurrentCompany"]</th>
					<th>@L["CurrentPositionType"]</th>
                    <th>@L["Status"]</th>
					<th>@L["CV"]</th>
					<th>@L["CoverLetter"]</th>
					<th>@L["AdditionalDocument"]</th>
					<th>@L["Vacancy"]</th>
@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
				</tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>

